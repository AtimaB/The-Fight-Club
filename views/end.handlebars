<style>
    body {
        background-image: url("/assets/images/backgroundLogo2.jpg");
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }
</style>


<div class="container">
 
    <div class="row">
        <h3>Score Details</h3>
        <div class="col s8 offset-s2" style="background-color: rgba(250, 250, 250, 0.815);">
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Score</th>
                    </tr>
                </thead>

                <tbody>

                    {{#each PlayerValues}}

                    <tr>
                        <td>{{dataValues/name}}</td>
                        <td>{{dataValues/score}}</td>
                    </tr>

                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col s8 offset-s2" style="background-color: rgba(250, 250, 250, 0.815);">
            <h5 style="text-align: center;"> Highest score recorded is</h5>
            <h4 style="color: brown; text-align: center;">{{#each HighscoreValue}}{{dataValues/maxScore}}{{/each}}</h4>
            <h5 style="text-align: center;"> Want to crack the highscore? <br>Start fighting again!!!</h5>
        </div>
    </div>

    <!-- start game button !-->
    <div class="row">
        <div class="col s8 offset-s4" style="margin-top: 40px;">
            <button type="submit" class="start btn-large col s6" id="again">Let's Fight Again!</button>
        </div>
    </div>
</div>